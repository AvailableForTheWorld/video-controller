{
    "name": "video-controller",
    "description": "full rich controller extension for video",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "./src/popup/popup.html",
        "default_icon": {
            "16": "./src/assets/images/get_started16.png",
            "32": "./src/assets/images/get_started32.png",
            "48": "./src/assets/images/get_started48.png",
            "128": "./src/assets/images/get_started128.png"
        }
    },
    "icons": {
        "16": "./src/assets/images/get_started16.png",
        "32": "./src/assets/images/get_started32.png",
        "48": "./src/assets/images/get_started48.png",
        "128": "./src/assets/images/get_started128.png"
      },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                    "default": "Ctrl+Shift+F",
                    "mac": "MacCtrl+Shift+F"
                },
            "description": "Opens hello.html"
        }
    },
    "background": {
        "service_worker": "./src/service/background.js"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": ["http://*/*","https://*/*","file:///*"],
            "js": ["./src/content/inject.js"]
        }
    ],
    "permissions": ["storage","activeTab","scripting"],
    "options_page": "./src/options/options.html"
}